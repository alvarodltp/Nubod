
<%= form_for @dashboard, url: dashboards_path, html: { multipart: true } do |form| %>

    <% if @dashboard.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@dashboard.errors.count, "error") %> prohibited
            this article from being saved:
          </h2>
          <ul>
            <% @dashboard.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>

    <% end %>

    <div class="form-group">
      <%= form.file_field :document, class:'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :title %><br>
      <%= form.text_field :title, class:'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :text %><br>
      <%= form.text_area :text, class:'form-control', rows:8 %>
    </div>

    <div class="form-group">
      <%= form.submit 'Save Program', class:'btn btn-primary' %>
    </div>
<% end %>
